<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paciente_paciente">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10sp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="@font/bebas_neue"
        android:text="Welcome back!"
        android:textColor="@color/black"
        android:textSize="25sp" />

        <TextView
            android:id="@+id/txtPacienteN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="Paciente"
            android:textSize="18sp" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Condicion"
        android:layout_marginTop="1sp"
        android:id="@+id/txtCondicion"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edad:"
        android:layout_marginTop="2sp"
        android:id="@+id/txtCorreoPac"
        />
    </LinearLayout>
    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/ic_baseline_favorite_24"
        android:layout_marginTop="115sp"
        android:layout_marginLeft="25sp"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0"
        android:layout_marginTop="115sp"
        android:layout_marginLeft="85sp"
        android:textSize="38sp"
        android:id="@+id/txtBMP"/>
    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/saturacionoxigeno"
        android:layout_marginTop="185sp"
        android:layout_marginLeft="25sp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0%"
        android:layout_marginTop="185sp"
        android:layout_marginLeft="85sp"
        android:textSize="38sp"
        android:id="@+id/txtSPO"/>

    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/temperatura"
        android:layout_marginTop="265sp"
        android:layout_marginLeft="25sp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0 C"
        android:layout_marginTop="265sp"
        android:layout_marginLeft="85sp"
        android:textSize="38sp"
        android:id="@+id/txtTEMP"/>
    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/ic_baseline_calendar_today_24"
        android:layout_marginTop="335sp"
        android:layout_marginLeft="25sp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0 C"
        android:layout_marginTop="335sp"
        android:layout_marginLeft="85sp"
        android:textSize="38sp"
        android:id="@+id/txtRegistroDate"/>

</FrameLayout>