<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">


            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="120dp"
                android:layout_height="105dp"
                android:padding="4dp"
                android:src="@drawable/pacienteimg" />


            <TextView
                android:id="@+id/txtPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="180dp"
                android:layout_marginEnd="2dp"
                android:layout_toStartOf="@+id/imgVerRegistros"
                android:layout_toEndOf="@+id/imgAvatar"
                android:fontFamily="@font/bebas_neue"
                android:text="Paciente"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/txtidentificacion"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/txtPaciente"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="218dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imgAvatar"
                android:text="0000000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtCondicionEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtidentificacion"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imgAvatar"
                android:text="Condicion, edad"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="#585858" />

            <TextView
                android:id="@+id/txtUltimoRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCondicionEdad"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imgAvatar"
                android:text="Ultimo registro:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="#585858" />

            <ImageView
                android:id="@+id/imgVerRegistros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>