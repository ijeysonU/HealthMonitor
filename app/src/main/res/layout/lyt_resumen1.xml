<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Resume"
            android:fontFamily="@font/bebas_neue"
            android:textSize="27sp"
            android:textColor="#585858"
            android:layout_margin="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="27sp">


            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_people_24" />
            <ImageView
                android:id="@+id/img2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_sick_24" />

            <TextView
                android:id="@+id/lblnombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtNumeroPacientes"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@+id/txtNumeroPacientes"
                android:text="Registered patients"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#585858"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtNumeroPacientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/imgAvatar"
                android:text="00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAlertas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtNumeroAlertas"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="125dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/txtNumeroAlertas"
                android:text="Registered alerts"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#585858"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtNumeroAlertas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNumeroPacientes"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="218dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/imgAvatar"
                android:text="00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>